<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="accountViewVM" type="com.rentranslate.app.modules.accountview.data.viewmodel.AccountViewVM"/>
    </data>
    <LinearLayout android:id="@+id/linearAccountview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <androidx.appcompat.widget.Toolbar android:gravity="start"
            android:id="@+id/toolbarToolbar"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_5pxh"
            android:layout_marginTop="@dimen/_7pxv"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearAppheader"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageMenu"
                    android:layout_height="@dimen/_49pxh"
                    android:layout_width="@dimen/_58pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_menu"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_menu"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtPlaces"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5pxv"
                    android:layout_marginStart="@dimen/_50pxh"
                    android:layout_marginTop="@dimen/_5pxv"
                    android:layout_weight="0.69"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{accountViewVM.accountViewModel.txtPlaces}"
                    style="@style/txtIntersemibold32" tools:text="@string/lbl_account"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <ImageView android:id="@+id/imageProfilePicture"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_190pxh"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_width="@dimen/_185pxh"
            android:scaleType="fitXY"
            imageRes="@{@drawable/img_profilepicture}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_profilepicture"/>
        <TextView android:gravity="start"
            android:id="@+id/txtNameAntonVol"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_29pxh"
            android:layout_marginStart="@dimen/_29pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="match_parent"
            android:text="@{accountViewVM.accountViewModel.txtNameAntonVol}"
            style="@style/txtRobotobold40" tools:text="@string/msg_name_anton_vol"/>
        <TextView android:gravity="start" android:id="@+id/txtLanguage"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_33pxh"
            android:layout_marginStart="@dimen/_33pxh"
            android:layout_marginTop="@dimen/_9pxv"
            android:layout_width="match_parent"
            android:text="@{accountViewVM.accountViewModel.txtLanguage}"
            style="@style/txtInterbold40" tools:text="@string/msg_language_engli"/>
        <ImageView android:id="@+id/imageSettings"
            android:layout_gravity="start"
            android:layout_height="@dimen/_100pxh"
            android:layout_marginBottom="@dimen/_9pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_216pxv"
            android:layout_width="@dimen/_94pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_settings"
            tools:ignore="ContentDescription" tools:src="@drawable/img_settings"/>
    </LinearLayout>
</layout>
